rules_version = '2';
service firebase.storage {
  // CORS headers
  match /b/{bucket}/o {
    // Handle CORS preflight requests
    match /{allPaths=**} {
      allow options: if request.method == 'OPTIONS';
    }
    
    // Allow read access to all authenticated users
    match /certificates/{userId}/{fileName} {
      allow read: if request.auth != null;
      
      // Allow write access to admins and the user who owns the certificate
      allow write: if 
        request.auth != null && (
          // Allow if user is admin
          (firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
          firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin') ||
          // Or if the user is uploading to their own directory
          (request.auth.uid == userId)
        );
        
      // Allow delete only for admins
      allow delete: if 
        request.auth != null &&
        firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
        firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';
        
      // Add CORS headers
      allow options: if request.method == 'OPTIONS';
    }
    
    // Public read access for profile pictures and other public assets
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if 
        request.auth != null &&
        firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
        firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';
      allow options: if request.method == 'OPTIONS';
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
      allow options: if request.method == 'OPTIONS';
    }
  }
}