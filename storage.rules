rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read certificate files
    match /certificates/{certificateId}/{fileName} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;

      // Allow write access only to admins
      allow write: if
        request.auth != null &&
        firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
        firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';

      // Allow delete access only to admins
      allow delete: if
        request.auth != null &&
        firestore.exists(/databases/(default)/documents/adminUsers/$(request.auth.uid)) &&
        firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write, delete: if false;
    }
  }
}